<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:id="@+id/widget33"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/infoCo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <EditText
            android:id="@+id/adresse"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="88.167.230.145"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/port"/>
        <EditText
            android:id="@+id/port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6667"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />
        <Button
            android:id="@+id/connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/adresse"/>
        <Button
            android:id="@+id/deconnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deconnection"
            android:textSize="18sp"
            android:layout_below="@+id/adresse"
            android:layout_alignParentRight="true" />
        <EditText
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_below="@+id/connection"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/envoyer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Envoyer"
            android:textSize="18sp"
            android:layout_below="@+id/message"
            android:layout_alignParentLeft="true"/>
        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/envoyer"
            android:layout_alignParentLeft="true"
            android:textSize="12sp"/>
    </RelativeLayout>
</TableLayout>
